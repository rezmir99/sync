[Unit]
Description=paqet
After=network.target

[Service]
Type=simple
ExecStart=/root/paqet/paqet_linux_amd64 run
WorkingDirectory=/root/paqet
Environment="PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games:/usr/local/games:/snap/bin"
Restart=on-failure
RestartSec=1
User=root

[Install]
WantedBy=multi-user.target
